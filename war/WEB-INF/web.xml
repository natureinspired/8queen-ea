<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>solutionService</servlet-name>
    <servlet-class>com.natureinspiredcode.server.SolutionServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>solutionService</servlet-name>
    <url-pattern>/nature_inspired_code/solution</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Nature_Inspired_Code.html</welcome-file>
  </welcome-file-list>

</web-app>
